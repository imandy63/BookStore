@model BookStore.ViewModel.LoginVM
@{
    ViewBag.Title = "Index";
}

<div>
    <div class="flex justify-center shadow-inner items-center p-4 bg-[#f7f7f7] border">
        <h1 class="text-3xl font-medium">MY ACCOUNT</h1>
    </div>
    <div class="flex justify-center">
        @{
            var a = ViewBag.Error;
            if (a != null)
            {
                <div id="popupError" class="fixed top-0 left-0 right-0 z-50 w-full overflow-x-hidden overflow-y-auto md:inset-0 h-full max-h-full">
                    <div class="w-full h-full bg-[rgba(0,0,0,0.7)] z-1" onclick="ClosePopup()"></div>
                    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 z-50 -translate-y-1/2 w-full max-w-2xl max-h-full">
                        <!-- Modal content -->
                        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                            <!-- Modal header -->
                            <div class="flex items-center justify-start p-4 border-b rounded-t dark:border-gray-600">
                                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                                    Không thể đăng nhập
                                </h3>
                            </div>
                            <!-- Modal body -->
                            <div class="p-6 space-y-6">
                                <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
                                    @a
                                </p>
                            </div>
                            <!-- Modal footer -->
                            <div class="flex items-center justify-end p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                                <button onclick="ClosePopup()" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "p-6 max-w-[1150px] w-[90vw]" }))
        {
            <h1 class="text-2xl font-bold">ĐĂNG NHẬP</h1>
            <div class="">
                <div class="my-4">
                    @Html.LabelFor(temp => temp.Username, new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.Username, new { @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.Username)
                </div>
                <div class="my-4">
                    @Html.LabelFor(temp => temp.Password, new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.Password, new { type = "password", @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.Password)
                </div>

                <button type="submit"
                        class="text-white duration-300 font-bold hover:bg-[#446084] bg-[#3ac2cc] py-2 px-4">
                    Đăng nhập
                </button>
               
                <div class="my-4">
                    <a href="/Auth/Register" class="text-black hover:text-[#3ac2cc]">Chưa có tài khoản? Đăng ký ngay</a>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function ClosePopup() {
        document.getElementById("popupError").classList.add("hidden");
    }
</script>