@model BookStore.ViewModel.ProfileModel
@{
    ViewBag.Title = "ProfileUpdate";
}

<div>
    <div class="flex justify-center">
        @using (Html.BeginForm("ProfileUpdate", "Home", FormMethod.Post, new { @class = "p-6 max-w-[1150px] w-[90vw]" }))
        {
            <h1 class="text-2xl font-bold">Profile</h1>
            <div class="">
                <div class="my-4">
                    @Html.LabelFor(temp => temp.Name, new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.Name, new { @Value = ViewBag.user.Name, @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.Name)
                </div>
                <div class="my-4">
                    @Html.LabelFor(temp => temp.PhoneNumber, new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.PhoneNumber, new { @Value = ViewBag.user.PhoneNumber, @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.PhoneNumber)
                </div>
                <div class="my-4">
                    @Html.LabelFor(temp => temp.Address, new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.Address, new { @Value = ViewBag.user.Address ,@class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.Address)
                </div>
                <button type="submit"
                        class="text-white duration-300 font-bold hover:bg-[#446084] bg-[#3ac2cc] py-2 px-4">
                    Cập nhật
                </button>
                <a class="text-black hover:text-[#3ac2cc]" href="/Home/Password">Đổi mật khẩu </a>
            </div>
        }
    </div>
</div>