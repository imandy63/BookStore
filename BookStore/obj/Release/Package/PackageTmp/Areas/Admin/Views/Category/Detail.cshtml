@model BookStore.Models.Genre
@{
    ViewBag.Title = "Detail";
}

<div class="p-4 my-4 mx-2">
    <h2 class="text-2xl font-bold  my-4">Update Category</h2>
    @if (Model.Products.Count() == 0)
    {
        using (Html.BeginForm("Delete", "Category", FormMethod.Post))
        {
            <div>
                @Html.TextBox("Id", "", new { @Value = Model.GenreId, name = "Id", @class = "hidden" })
                <div class="flex items-center justify-end space-x-2 rounded-b ">
                    <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Xóa</button>
                </div>
            </div>
        }
    }
    @using (Html.BeginForm("Update", "Category", FormMethod.Post))
    {
        <div class="my-4">
            @Html.TextBoxFor(model => model.GenreId, new { name = "Name", @Value = Model.GenreId, @class = "hidden" })
        </div>
        <div class="my-4">
            @Html.LabelFor(model => model.Name, new { @class = "text-black my-1 block font-normal" })
            @Html.TextBoxFor(model => model.Name, new { name = "Name", @Value = Model.Name, @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none " })
        </div>
        <div class="flex items-center justify-end space-x-2 rounded-b ">
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Chỉnh sửa</button>
        </div>
    }
</div>