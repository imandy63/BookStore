@model List<BookStore.Models.Genre>
@{
    ViewBag.Title = "Category";
}


<div class="p-4 my-4 mx-2">
    <h2 class="text-2xl font-bold  my-4">Genres</h2>
    <div class="text-right p-4">
        <button onclick="toggleInsert()" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Tạo mới</button>
    </div>

    <div id="popupInsert" class="absolute hidden top-0 left-0 right-0 z-50 w-full overflow-x-hidden overflow-y-auto md:inset-0 h-full max-h-full">
        <div class="w-full h-full bg-black opacity-50 z-1" onclick="toggleInsert()"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 z-50 -translate-y-1/2 w-full max-w-2xl max-h-full">
            <div class="relative p-2 bg-white rounded-lg shadow dark:bg-gray-700">
                <!-- Modal header -->
                <div class="flex items-center justify-between border-b rounded-t dark:border-gray-600">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                        Tạo mới
                    </h3>
                    <button onclick="toggleInsert()" type="button" class="hover:text-black duration-300 text-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">X</button>
                </div>


                <!-- Modal body -->
                <div class="p-2 space-y-6">
                    @using (Html.BeginForm("Create", "Category", FormMethod.Post))
                    {
                        <div class="my-4">
                            @Html.Label("Tên thể loại", new { @class = "text-black my-1 block font-normal" })
                            @Html.TextBox("Name", "", new { name = "Name", @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                        </div>
                        <div class="flex items-center justify-end space-x-2 rounded-b ">
                            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Tạo</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div>
        <div class="relative overflow-x-auto">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Tên
                        </th>
                        <th scope="col" class="w-1/3 px-6 py-3">
                            Tác vụ
                        </th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                @item.Name
                            </td>
                            <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                <a class="hover:text-blue-600 duration-300 " href="/Admin/Category/Detail/@item.GenreId">
                                    Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function toggleInsert() {
        document.getElementById('popupInsert').classList.toggle("hidden");
    }
</script>
