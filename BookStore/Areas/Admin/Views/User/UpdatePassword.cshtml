@model BookStore.ViewModel.PasswordModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div>
    <div class="flex justify-center">
        @using (Html.BeginForm("UpdatePassword", "User", FormMethod.Post, new { @class = "p-6 max-w-[1150px] w-[90vw]" }))
        {
            <h1 class="text-2xl font-bold">Đổi mật khẩu</h1>
            <div class="">
                @Html.TextBox("Id", "" , new { @Value = ViewBag.user.Id, @class = "hidden" })
                <div class="my-4">
                    @Html.LabelFor(temp => temp.Password, "Mật khẩu mới", new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.Password, new { type = "password", @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.Password)
                </div>
                <div class="my-4">
                    @Html.LabelFor(temp => temp.Password, new { @class = "text-black my-1 block font-normal" })
                    @Html.TextBoxFor(temp => temp.ConfirmPassword, new { type = "password", @class = "block p-2 border w-full h-[36px] focus:border-[rgb(200,200,200)] hover:border-[rgb(200,200,200)] outline-none" })
                    @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
                </div>
                <button type="submit"
                        class="text-white duration-300 font-bold hover:bg-[#446084] bg-[#3ac2cc] py-2 px-4">
                    Đổi mật khẩu
                </button>
            </div>
        }
    </div>
</div>
